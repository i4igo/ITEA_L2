<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/etName" />

            <TextView
                android:id="@+id/tLName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/etLName" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tPNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/etPNumber" />

        <TextView
            android:id="@+id/tCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/etCountry" />

        <TextView
            android:id="@+id/tCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/etCity" />

        <TextView
            android:id="@+id/tEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/etEmail" />

        <TextView
            android:id="@+id/tNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/etNotes" />

    </LinearLayout>

</LinearLayout>